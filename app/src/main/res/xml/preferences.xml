    <vip.cdms.mcoreui.preference.PreferenceCategory app:title="@string/fragment_setting_about">
        <vip.cdms.mcoreui.preference.Preference
            app:key="about"
            app:title="@string/app_name"
            app:summary="..." />
        <vip.cdms.mcoreui.preference.Preference
            app:key="github"
            app:title="Github"
            app:summary="https://github.com/Cdm2883/MineChat">
            <intent android:action="android.intent.action.VIEW"
